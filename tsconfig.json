{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "target": "es6",
        "lib": [
            "dom",
            "es6",
            "dom.iterable",
            "scripthost",
            "es7"
        ],
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "./src/**/*",
    ],
    "exclude": [
        "./node_modules"
    ]
}